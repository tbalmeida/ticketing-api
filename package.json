{
  "name": "server",
  "version": "1.0.0",
  "description": "API server for Ticketing for Good - LHL final project",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon ./src/index.js",
    "start": "node ./src/index.js",
    "error": "TEST_ERROR=true node ./src/index.js",
    "reset": "psql -U development -d ticketing_development < ./src/db/schema/create.sql && psql -U development -d ticketing_development < ./src/db/schema/development.sql"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.1.1",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "googleapis": "^48.0.0",
    "helmet": "^3.18.0",
    "nodemailer": "^6.4.6",
    "pdfkit": "^0.11.0",
    "pg": "^7.8.1",
    "qrcode": "^1.4.4",
    "socket.io": "^2.2.0",
    "stripe": "^8.35.0",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ]
  },
  "nodemon": {
    "name": "nodemon",
    "homepage": "http://nodemon.io",
    "...": "... other standard package.json values",
    "nodemonConfig": {
      "ignore": [
        "test/*",
        "docs/*"
      ],
      "delay": "2500"
    }
  }
}
